<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <h4 style="text-align: center;"><%=mod%> Question Bank</h4>
        
        <% for (let i = 0; i < qData.length; i++) { %>
            <div style="background-color: #efefef; margin-bottom: 10px; padding: 20px">
                <div>Question <%=i+1%> <%-qData[i].q %></div>
                <div onclick="displayAnswer('<%=i%>')">Options:
                    <% for (let j = 0; j < qData[i].a.length; j++) { %>
                        <p><%=j+1%>) <%=qData[i].a[j].option%><%if (qData[i].a[j].correct) {%><span id="a<%=i%>" style="display: none; color:green; font-size: 11px;">&emsp;Answer</span><% } %></p>
                    <% } %>
                </div>
            </div>
        <% } %>


        <script>
            function displayAnswer(i) {
                document.getElementById(`a${i}`).style.display = 'inline-block';
            }
        </script>
    </body>
</html>